# GrubTech Localization Environment Variables
# Copy this file to .env.local and update the values

# Webhook Configuration
# Secret key for webhook signature verification
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TRANSLATION_WEBHOOK_SECRET=your-secure-webhook-secret-here

# Localization Configuration
# Default locale for the application
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Fallback locale when translations are missing
NEXT_PUBLIC_FALLBACK_LOCALE=en

# Enable automatic preloading of all supported languages
NEXT_PUBLIC_ENABLE_AUTO_PRELOAD=true

# Debug Configuration
# Enable debug logging for translations (development only)
NEXT_PUBLIC_DEBUG_TRANSLATIONS=false

# Translation Service Configuration
# Base URL for translation files (optional, defaults to /translations/)
NEXT_PUBLIC_TRANSLATIONS_BASE_URL=/translations/

# Cache Configuration
# Enable translation caching (default: true)
NEXT_PUBLIC_ENABLE_TRANSLATION_CACHE=true

# Cache duration in milliseconds (default: 1 hour)
NEXT_PUBLIC_CACHE_DURATION=3600000

# Webhook Rate Limiting
# Maximum requests per minute for webhook endpoint
WEBHOOK_RATE_LIMIT_MAX_REQUESTS=10

# Rate limit window in milliseconds
WEBHOOK_RATE_LIMIT_WINDOW=60000

# Database Configuration (if using database for translations)
# DATABASE_URL=postgresql://user:password@localhost:5432/grubtech
# REDIS_URL=redis://localhost:6379

# CDN Configuration (optional)
# CDN_BASE_URL=https://cdn.yourdomain.com
# CDN_TRANSLATIONS_PATH=/translations/

# Analytics Configuration (optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn
# BUGSNAG_API_KEY=your-bugsnag-key

# Monitoring (optional)
# NEW_RELIC_LICENSE_KEY=your-newrelic-key
# DATADOG_API_KEY=your-datadog-key

# Security Configuration
# CORS_ORIGIN=https://yourdomain.com
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Feature Flags
# ENABLE_WEBHOOK_ENDPOINT=true
# ENABLE_TRANSLATION_CACHE=true
# ENABLE_RTL_SUPPORT=true
# ENABLE_DARK_MODE=true

# Development Configuration
# NODE_ENV=development
# NEXT_PUBLIC_APP_ENV=development
